<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:padding="5dp">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Hello"
        android:gravity="center"
        android:text="X"
        app:layout_constraintBottom_toTopOf="@id/tv10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv8"
        app:layout_constraintTop_toBottomOf="@id/tv9" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Bye"
        android:gravity="center"
        android:text="Y"
        app:layout_constraintBottom_toTopOf="@id/tv10"
        app:layout_constraintEnd_toStartOf="@id/tv8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv9" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="#ED092B"
        android:gravity="center"
        android:text="1"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/tv4"
        app:layout_constraintEnd_toStartOf="@id/tv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:background="#FF5722"
        android:gravity="center"
        android:text="2"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        app:layout_constraintEnd_toStartOf="@id/tv3"
        app:layout_constraintStart_toEndOf="@id/tv1"
        app:layout_constraintTop_toTopOf="@id/tv1" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="3"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@id/tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv2"
        app:layout_constraintTop_toTopOf="@id/tv2" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="4"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/tv5"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:text="5"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/tv6"
        app:layout_constraintTop_toBottomOf="@id/tv4" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="#FF9800"
        android:gravity="center"
        android:text="6"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/tv7"
        app:layout_constraintTop_toBottomOf="@id/tv5" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="7"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/tv10"
        app:layout_constraintEnd_toStartOf="@id/tv8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv6" />


    <TextView
        android:id="@+id/tv8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="8"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/tv10"
        app:layout_constraintEnd_toStartOf="@id/tv9"
        app:layout_constraintStart_toEndOf="@id/tv7"
        app:layout_constraintTop_toBottomOf="@id/tv6" />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="9"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/tv10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv8"
        app:layout_constraintTop_toBottomOf="@id/tv6" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="#E91E63"
        android:gravity="center"
        android:text="10"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv7" />

</androidx.constraintlayout.widget.ConstraintLayout>
